<Window x:Class="TextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="Text Editor" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="95*"/>
        </Grid.RowDefinitions>
        <UniformGrid Grid.Row="0" Columns="5">
            <Button x:Name="copy" Content="Copy"/>
            <Button x:Name="paste" Content="Paste"/>
            <Button x:Name="open" Content="Open"/>
            <Button x:Name="save" Content="Save"/>
            <Button x:Name="cut" Content="Cut"/>
        </UniformGrid>
        <Border Grid.Row="1" Padding="10">
            <RichTextBox x:Name="userinput" />
        </Border>
    </Grid>
</Window>
